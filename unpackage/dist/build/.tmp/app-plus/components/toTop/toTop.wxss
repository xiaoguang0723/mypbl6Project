
.toTop{
	position: fixed;
	width: 60px; 
	height: 60px;
	background: #DD524D;
	z-index: 55; 
	bottom: 40px; 
	right: 15px;
	border-radius: 50%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	opacity: .7;
}
.toTop image{
	width: 60%;
	height: 60%;
}

