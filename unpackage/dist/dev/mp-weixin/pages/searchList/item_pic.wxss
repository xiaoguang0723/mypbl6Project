
.circle{
	padding: 10px 10px;
	width: 100%;
	
	display: flex;
	justify-content: space-between;
	height: 120px;
	margin-bottom: 5px;
	/* background: #007AFF; */
}
.left{
	
	flex: 1;
	display: flex;
	align-items: flex-start;
	justify-content: space-around;
	flex-direction: column;
}
.title{
	width: 500rpx;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
	font-size: 16px;
	color: #333;
}
.des{
	width: 500rpx;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
	font-size: 14px;
	color: #666;
}
.info{
	font-size: 14px;
	color: #999;
}
.right{
	width: 70px;
	height: 100px;
	/* background: #4CD964; */
	display: flex;
}
.right image{
	flex: 1;
	width: 100%;
	height: 100%;
}

